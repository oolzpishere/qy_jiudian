<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th scope="col">名称</th>
      <th scope="col">内容</th>
    </tr>
  </thead>

  <tbody>
    <% @show_attributes.each do |item| %>
      <tr>
        <td>
          <%= t(".#{item}") %>
        </td>
        <td>
          <% case item.to_s %>
          <% when /breakfast/ %>
            <%= @hotel.breakfast == 0 ? "不含早" : "含早" %>
          <% when /car/ %>
            <%= @hotel.car == 0 ? "不含用车" : "含用车" %>
          <% when /conferences/ %>
            <%= @hotel.conferences.map {|c| c.name}.join(", ") %>
          <% else %>
            <%= @hotel.try(item) %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
