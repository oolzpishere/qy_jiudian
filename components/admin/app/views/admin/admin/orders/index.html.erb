<div class="row">
  <div class="col">
    <span class="h1">订单</span>
    <span class="badge badge-pill badge-primary"><%= @orders.count %></span>
  </div>
  <div class="col-auto">
    <span>
      <%= link_to 'New Conferences', admin.new_conference_hotel_order_path, class: "btn btn-success my-auto" %>
    </span>
  </div>
</div>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <% @show_page_attributes.each do |spa| %>
        <th scope="col"><%= spa.to_s %></th>
      <% end %>
      <th scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |item| %>
      <tr>
        <% @show_page_attributes.each do |spa| %>
          <td><%= item.try(spa) %></td>
        <% end %>
        <td>
          <%= link_to 'Show', item %>
          <%= link_to 'Edit', admin.edit_order_path(item) %>
          <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
